generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Auth {
  id       String @id @default(uuid())
  username String @unique
  password String

  @@map("auth")
}

model Kategori {
  id         String   @id @default(uuid())
  nama       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  paket_categories PaketKategori[]

  @@map("kategori")
}

model Agenc {
  id         String   @id @default(uuid())
  nama       String   @unique
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  sales Sales[]

  @@map("agenc")
}

model Datel {
  id         String        @id @default(uuid())
  kode_sto   String        @unique
  nama       String
  categori   KategoriDatel
  wilayah    String
  sub_area   SubArea
  created_at DateTime      @default(now())
  updated_at DateTime      @updatedAt

  sales              Sales[]
  registrasi_indibiz RegistrasiIndibiz[]

  @@map("datel")
}

model Promo {
  id        String     @id @default(uuid())
  nama      String     @unique
  deskripsi String
  jenis     JenisPromo
  diskon    Decimal    @db.Decimal(5, 2)
  mulai     DateTime
  akhir     DateTime
  is_global Boolean

  paket_promos PaketPromo[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("promo")
}

model Paket {
  id          String  @id @default(uuid())
  nama        String  @unique
  bandwith    Int
  price       Decimal @db.Decimal(12, 2)
  price_psb   Decimal @db.Decimal(12, 2)
  ppn         Int
  final_price Decimal @db.Decimal(12, 2)

  paket_categories   PaketKategori[]
  paket_promos       PaketPromo[]
  registrasi_indibiz RegistrasiIndibiz[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("paket")
}

model PaketKategori {
  id          String @id @default(uuid())
  paket_id    String
  kategori_id String

  paket    Paket    @relation(fields: [paket_id], references: [id], onDelete: Cascade)
  kategori Kategori @relation(fields: [kategori_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())

  @@unique([paket_id, kategori_id])
  @@map("paket_kategori")
}

model PaketPromo {
  id       String @id @default(uuid())
  paket_id String
  promo_id String

  paket Paket @relation(fields: [paket_id], references: [id], onDelete: Cascade)
  promo Promo @relation(fields: [promo_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())

  @@unique([paket_id, promo_id])
  @@map("paket_promo")
}

model Sales {
  id          String      @id @default(uuid())
  nama        String      @unique
  kode_sales  String
  email       String      @unique
  status      StatusSales
  agency_id   String
  datel_id    String
  kat_umur_sa DateTime    @db.Date()

  agency             Agenc               @relation(fields: [agency_id], references: [id])
  datel              Datel               @relation(fields: [datel_id], references: [id])
  registrasi_indibiz RegistrasiIndibiz[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("sales")
}

model RegistrasiIndibiz {
  id          String @id @default(uuid())
  nama        String
  datel_id    String
  paket_id    String
  sales_id    String
  no_hp_1     String
  no_hp_2     String
  kordinat    String
  alamat      String
  nama_pic    String
  ttl_pic     String
  no_ktp      String
  email       String
  foto_ktp    String
  foto_selfie String
  bukti_usaha String
  bukti_niwp  String

  datel Datel @relation(fields: [datel_id], references: [id])
  paket Paket @relation(fields: [paket_id], references: [id])
  sales Sales @relation(fields: [sales_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("registrasi_indibiz")
}

enum StatusSales {
  ACTIVE
  DELETED
}

enum JenisPromo {
  DISKON
  CASHBACK
  BONUS
  DLL
}

enum KategoriDatel {
  HERO
  NON_HERO
}

enum SubArea {
  INNER
  OUTER
}
